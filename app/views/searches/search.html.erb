<h2>Results index</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
  <% if @range == '2' %>
   <thead>
     <tr>
       <th>PostUser</th>
       <th></th>
       <th>Title</th>
       <th>Date</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
      <% @postfiles.each do |postfile| %>
      <tr>
        <td>
          <%= link_to(postfile.user) do %>
            <%= attachment_image_tag(postfile.user, :profile_image, :fill, 50, 50, fallback: "no-image.jpg") %>
          <% end %>
        </td>
        <td><%= postfile.user.name %></td>
        <td><%= link_to postfile.title, post_file_path(postfile) %></td>
        <td><%= postfile.updated_at %></td>
      </tr>
      <% end %>
    </tbody>

  <% else %>
    <thead>
      <tr>
        <th>User</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image.jpg") %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user_path(user) %></td>
     </tr>
    <% end %>
    </tbody>
   <% end %>
 </table>