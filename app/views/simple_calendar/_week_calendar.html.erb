<div class="simple-calendar">
  <div class="calendar-heading">
    <% if calendar.number_of_weeks == 1 %>
      <span class="calendar-title"><h2 class="text-white bg-secondary">Week <%= calendar.week_number %></h2></span>
    <%else%>
        <span class="calendar-title"><h2 class="text-white bg-secondary">Week <%= calendar.week_number %> - <%= calendar.end_week %></h2></span>
    <%end%>
        <%= link_to t('simple_calendar.previous', default: '<<'), calendar.url_for_previous_view,class: "btn btn-outline-secondary" %>
        <%= link_to t('simple_calendar.next', default: '>>'), calendar.url_for_next_view,class: "btn btn-outline-secondary" %>
        <%= link_to "Filter Reset",user_event_path(start_date: start_date) ,class: "btn text-white bg-secondary" %>
        <h6 class= "fas fa-info-circle">tag click => Calendar is filtered</h6>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
